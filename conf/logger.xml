<configuration debug="false">

    <contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
        <resetJUL>true</resetJUL>
    </contextListener>
    
  <conversionRule conversionWord="coloredLevel" converterClass="play.api.Logger$ColoredLevel" />
  
  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
     <file>${application.home}/logs/application.log</file>
     <encoder>
       <pattern>%date - [%level] - from %logger in %thread %n%message%n%xException%n</pattern>
     </encoder>
   </appender>

    <appender name="MEMORY_FILE" class="ch.qos.logback.core.FileAppender">
        <file>${application.home}/logs/application_memory.log</file>
        <encoder>
            <pattern>%date - [%level] - from %logger in %thread %n%message%n%xException%n</pattern>
        </encoder>
    </appender>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%coloredLevel %logger{15} - %message%n%xException{5}</pattern>
    </encoder>
  </appender>

   <root level="INFO">
     <appender-ref ref="STDOUT" />
     <appender-ref ref="FILE" />
   </root>

  <logger name="play" level="INFO" />
  <logger name="application" level="INFO" />
  <logger name="org.dbpedia.extraction.dataparser.UnitValueParser" level="ERROR" />
  <logger name="org.dbpedia.extraction.mappings.SimplePropertyMapping" level="ERROR" />
  <logger name="extraction.parser.AdvancedTimexParser" level="ERROR" />
  <logger name="controllers.InfoboxExtractionController" level="INFO" />

  <logger name="TemporalInfoboxExtractorActorMemory" level="ERROR">
    <appender-ref ref="MEMORY_FILE" />
  </logger>
  <logger name="actors.TemporalInfoboxExtractorActor" level="ERROR"/>
  <logger name="actors.SampleFinderActor" level="TRACE"/>
  <logger name="actors.SampleSaverActor" level="INFO"/>
  <logger name="ch.weisenburger.uima.FinancialDataSamplePipelineFactory" level="INFO"/>
  <logger name="ch.weisenburger.nlp.ner.CompanyRecognizer" level="INFO"/>
  <logger name="ch.weisenburger.nlp.ner.KBFinancialDataRelationTripleMatcher" level="INFO"/>


  <logger name="controllers.ExtractionResultsController" level="DBEUG"/>
  <logger name="controllers.PageController" level="DBEUG"/>





  <logger name="ner.LingPipeTrainingGenerator" level="INFO" />

  
</configuration>